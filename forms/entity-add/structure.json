{
    "options" : {
        "method" : "post",
        "print_method" : "server",
        "enctype" : "multipart/form-data",
        "json_validate" : 1,
        "required_mark" : "*",
        "width" : "half",
        "reduce_font_after" : 26,
        "hide_on_GET" : {
            "add_billing" : true
        }
    },
    "fields" : [
        {
            "gtype" : "section",
            "title" : "Unternehmen",
            "title_tag" : "h3",
            "fields" : [
                {
                    "gtype" : "row",
                    "fields" : [
                        {
                            "type" : "radio",
                            "cols" : 2,
                            "name" : "entity-entity",
                            "options" : {
                                "clinic" : "Klinik",
                                "doctor" : "Doctor"
                            },
                            "validate" : {
                                "notEmpty" : true
                            }
                        }
                    ]
                },
                {
                    "gtype" : "row",
                    "cols" : 2,
                    "fields" : [
                        {
                            "type" : "text",
                            "title" : "Name der Klinik / Praxis",
                            "name" : "entity-name",
                            "validate" : {
                                "notEmpty" : true
                            }
                        },
                        {
                            "type" : "text",
                            "title" : "Telefonnummer der Klinik",
                            "name" : "entity-phone",
                            "validate" : {
                                "notEmpty" : true
                            },
                            "meta_box" : true
                        },
                        {
                            "type" : "checkbox",
                            "name" : "entity-featured",
                            "title" : "Pin the Entry",
                            "meta_box" : "only",
                            "options" : {
                                "1" : "Featured"
                            },
                            "roles_edit" : [
                                "administrator"
                            ]
                        }
                    ]
                },
                {
                    "gtype" : "row",
                    "cols" : 2,
                    "fields" : [
                        {
                            "type" : "text",
                            "title" : "EMail Adresse für Kontaktanfrage",
                            "name" : "entity-email",
                            "validate" : {
                                "email" : true
                            },
                            "meta_box" : true
                        },
                        {
                            "type" : "text",
                            "title" : "Website der Klinik",
                            "name" : "entity-website",
                            "validate" : {
                                "notEmpty" : true,
                                "url" : true
                            },
                            "meta_box" : true
                        }
                    ]
                },
                {
                    "gtype" : "row",
                    "cols" : 2,
                    "fields" : [
                        {
                            "type" : "text",
                            "title" : "Adresse",
                            "name" : "entity-address",
                            "autocomplete" : "nope1",
                            "validate" : {
                                "notEmpty" : true
                            },
                            "meta_box" : true
                        },
                        {
                            "type" : "button",
                            "title" : "&nbsp;",
                            "value" : "Specify on map",
                            "name" : "entity-map"
                        },
                        {
                            "type" : "datalist",
                            "title" : "Branche",
                            "name" : "entity-specialty",
                            "options" : {},
                            "autocomplete" : "nope2",
                            "validate" : {
                                "notEmpty" : true
                            },
                            "meta_box" : true
                        },
                        {
                            "type" : "button",
                            "title" : "&nbsp;",
                            "value" : "Specify working hours",
                            "name" : "entity-working-hours"
                        }
                    ]
                },
                {
                    "gtype" : "row",
                    "cols" : 2,
                    "fields" : [
                        {
                            "type" : "file",
                            "title" : "Logo Ihrer Klinik / Doctor Photo",
                            "name" : "entity-avatar",
                            "validate" : {
                                "default" : true,
                                "maxSize" : 1000000,
                                "extension" : [
                                    "jpg",
                                    "jpeg",
                                    "png",
                                    "gif"
                                ]
                            },
                            "meta_box" : true
                        },
                        {
                            "type" : "file",
                            "title" : "Photo Ihrer Klinik",
                            "name" : "entity-photo",
                            "validate" : {
                                "default" : true,
                                "maxSize" : 1000000,
                                "extension" : [
                                    "jpg",
                                    "jpeg"
                                ]
                            },
                            "meta_box" : "only"
                        },
                        {
                            "type" : "text",
                            "title" : "Video zum Profil hinzufügen",
                            "name" : "entity-video",
                            "validate" : {
                                "url" : true
                            },
                            "meta_box" : true
                        },
                        {
                            "type" : "text",
                            "name" : "entity-tags",
                            "title" : "Tags",
                            "placeholder" : "Example: dantist, orthodontist",
                            "meta_box" : "only"
                        }
                    ]
                },
                {
                    "gtype" : "row",
                    "fields" : [
                        {
                            "type" : "radio",
                            "cols" : 3,
                            "title" : "Ich Wähle Einen",
                            "name" : "entity-tariff",
                            "options" : {
                                "standardeintrag" : "Standardeintrag",
                                "premiumeintrag" : "Premiumeintrag",
                                "kostenloser_eintrag" : "Kostenloser Eintrag"
                            },
                            "validate" : {
                                "notEmpty" : true
                            },
                            "meta_box" : true
                        }
                    ]
                },
                {
                    "type" : "textarea",
                    "title" : "Unternehmens Beschreibung",
                    "name" : "entity-content",
                    "rows" : 8,
                    "validate" : {
                        "notEmpty" : true
                    },
                    "meta_box" : true,
                    "tinymce" : "admin"
                }
            ]
        },
        {
            "gtype" : "hidden",
            "title" : "Öffnungszeiten (optional)",
            "title_tag" : "h3",
            "id" : "entity-working-hours",
