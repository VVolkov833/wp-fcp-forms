{
    "options" : {
        "method" : "post",
        "print_method" : "server",
        "enctype" : "multipart/form-data",
        "json_validate" : 1,
        "before" : "<div class=\"fcp-form-clinic fcp-form--half\">",
        "after" : "</div>",
        "required_mark" : "*",
        "reduce_font_after" : 36
    },
    "fields" : [
        {
            "gtype" : "section",
            "title" : "Unternehmen",
            "title_tag" : "h2",
            "fields" : [
                {
                    "gtype" : "row",
                    "fields" : [
                        {
                            "type" : "text",
                            "title" : "Name der Klinik / Praxis",
                            "name" : "entity-name",
                            "validate" : {
                                "notEmpty" : true
                            },
                            "comment" : "this field goes to the title, not a meta box"
                        }
                    ]
                },
                {
                    "gtype" : "row",
                    "cols" : 2,
                    "fields" : [
                        {
                            "type" : "file",
                            "title" : "Single Upload",
                            "name" : "entity-logo",
                            "validate" : {
                                "default" : true,
                                "maxSize" : 1000000,
                                "extension" : [
                                    "jpg",
                                    "jpeg",
                                    "png",
                                    "gif"
                                ]
                            },
                            "meta_box" : true
                        },
                        {
                            "type" : "file",
                            "title" : "Multiple Upload",
                            "name" : "entity-image",
                            "multiple" : true,
                            "limit" : 3,
                            "validate" : {
                                "default" : true,
                                "maxSize" : 1000000,
                                "extension" : [
                                    "jpg",
                                    "png"
                                ]
                            },
                            "meta_box" : true
                        }
                    ]
                }
            ]
        },
        {
            "type" : "submit",
            "name" : "user-submit",
            "value" : "Submit"
        }
    ]
}
