{
    "options" : {
        "method" : "post",
        "print_method" : "server",
        "enctype" : "multipart/form-data",
        "json_validate" : 1,
        "before" : "<div class=\"fcp-form-clinic\">",
        "after" : "</div>",
        "required_mark" : "*",
        "reduce_font_after" : 36
    },
    "fields" : [
        {
            "gtype" : "section",
            "title" : "Unternehmen",
            "title_tag" : "h3",
            "fields" : [
                {
                    "gtype" : "row",
                    "cols" : 2,
                    "fields" : [
                        {
                            "type" : "text",
                            "title" : "Name der Klinik / Praxis",
                            "name" : "company-name",
                            "validate" : {
                                "notEmpty" : true
                            },
                            "meta_box" : true
                        },
                        {
                            "type" : "text",
                            "title" : "EMail Adresse für Kontaktanfrage",
                            "name" : "company-email",
                            "autofill" : "create-account-email",
                            "validate" : {
                                "email" : true
                            },
                            "meta_box" : true
                        }
                    ]
                },
                {
                    "gtype" : "row",
                    "cols" : 2,
                    "fields" : [
                        {
                            "type" : "text",
                            "title" : "Adresse",
                            "name" : "company-address",
                            "validate" : {
                                "notEmpty" : true
                            },
                            "meta_box" : true,
                            "autocomplete" : [
                                "google-maps",
                                "address"
                            ]
                        },
                        {
                            "type" : "text",
                            "title" : "Bundesland / Region",
                            "name" : "company-region",
                            "validate" : {
                                "notEmpty" : true
                            },
                            "meta_box" : true
                        }
                    ]
                },
                {
                    "gtype" : "row",
                    "cols" : 2,
                    "fields" : [
                        {
                            "type" : "select",
                            "title" : "Branche",
                            "placeholder" : "Select an Option…",
                            "name" : "company-specialty",
                            "options" : {
                                "857" : "Allergologen",
                                "858" : "Allgemein- &amp; Hausärzte",
                                "860" : "Augenärzte",
                                "861" : "Chirurgen",
                                "863" : "Dermatologen",
                                "859" : "Gynäkologen",
                                "864" : "HNO-Ärzte",
                                "1862" : "Innere Medizin",
                                "1863" : "&nbsp;&nbsp;&nbsp;Endokrinologen",
                                "1864" : "&nbsp;&nbsp;&nbsp;Gastroenterologen",
                                "865" : "&nbsp;&nbsp;&nbsp;Kardiologen",
                                "2071" : "&nbsp;&nbsp;&nbsp;Pneumologen",
                                "866" : "Kinderärzte",
                                "867" : "Neurologen",
                                "868" : "Orthopäden",
                                "862" : "Plastische und Ästhetische Chirurgen",
                                "1022" : "Psychologen &amp; Psychotherapeuten",
                                "869" : "Psychologen &amp; Psychotherapie",
                                "1861" : "Radiologen",
                                "870" : "Urologen",
                                "871" : "Zahnärzte"
                            },
                            "options_get" : "specialty",
                            "validate" : {
                                "notEmpty" : true
                            },
                            "meta_box" : true
                        },
                        {
                            "type" : "text",
                            "title" : "Video zum Profil hinzufügen",
                            "name" : "company-video",
                            "validate" : {
                                "notEmpty" : true,
                                "url" : true
                            },
                            "meta_box" : true
                        }
                    ]
                },
                {
                    "gtype" : "row",
                    "cols" : 2,
                    "fields" : [
                        {
                            "type" : "file",
                            "title" : "Logo Ihrer Klinik",
                            "name" : "company-logo",
                            "validate" : {
                                "default" : true,
                                "maxSize" : 1000000,
                                "extension" : [
                                    "jpg",
                                    "jpeg",
                                    "png",
                                    "gif"
                                ]
                            },
                            "meta_box" : true
                        },
                        {
                            "type" : "file",
                            "title" : "Titelbild für Ihre Praxis",
                            "name" : "company-image",
                            "multiple" : true,
                            "validate" : {
                                "default" : true,
                                "maxSize" : 1000000,
                                "extension" : [
                                    "jpg"
                                ],
                                "limit" : 2
                            },
                            "meta_box" : true
                        }
                    ]
                },
                {
                    "type" : "textarea",
                    "title" : "Unternehmens Beschreibung",
                    "name" : "company-description",
                    "rows" : 8,
                    "validate" : {
                        "notEmpty" : true
                    },
                    "meta_box" : true
                }
            ]
        },
        {
            "gtype" : "section",
            "title" : "Öffnungszeiten (optional)",
            "title_tag" : "h3",
            "id" : "oeffnungszeiten",
            "description" : "<p>Keep empty if days are not work-days</p>",
            "fields" : [
                {
                    "gtype" : "row",
                    "cols" : 2,
                    "fields" : [
                        {
                            "type" : "text",
                            "name" : "mo-open",
                            "title" : "Montag",
                            "placeholder" : "Geöffnet",
                            "meta_box" : true
                        },
                        {
                            "type" : "text",
                            "name" : "mo-close",
                            "placeholder" : "Geschlossen",
                            "meta_box" : true
                        }
                    ]
                },
                {
                    "gtype" : "row",
                    "cols" : 2,
                    "fields" : [
                        {
                            "type" : "text",
                            "name" : "tu-open",
                            "title" : "Dienstag",
                            "placeholder" : "Geöffnet",
                            "meta_box" : true
                        },
                        {
                            "type" : "text",
                            "name" : "tu-close",
                            "placeholder" : "Geschlossen",
                            "meta_box" : true
                        }
                    ]
                },
                {
                    "gtype" : "row",
                    "cols" : 2,
                    "fields" : [
                        {
                            "type" : "text",
                            "name" : "we-open",
                            "title" : "Mittwoch",
                            "placeholder" : "Geöffnet",
                            "meta_box" : true
                        },
                        {
                            "type" : "text",
                            "name" : "we-close",
                            "placeholder" : "Geschlossen",
                            "meta_box" : true
                        }
                    ]
                },
                {
                    "gtype" : "row",
                    "cols" : 2,
                    "fields" : [
                        {
                            "type" : "text",
                            "name" : "th-open",
                            "title" : "Donnerstag",
                            "placeholder" : "Geöffnet",
                            "meta_box" : true
                        },
                        {
                            "type" : "text",
                            "name" : "th-close",
                            "placeholder" : "Geschlossen",
                            "meta_box" : true
                        }
                    ]
                },
                {
                    "gtype" : "row",
                    "cols" : 2,
                    "fields" : [
                        {
                            "type" : "text",
                            "name" : "fr-open",
                            "title" : "Freitag",
                            "placeholder" : "Geöffnet",
                            "meta_box" : true
                        },
                        {
                            "type" : "text",
                            "name" : "fr-close",
                            "placeholder" : "Geschlossen",
                            "meta_box" : true
                        }
                    ]
                },
                {
                    "gtype" : "row",
                    "cols" : 2,
                    "fields" : [
                        {
                            "type" : "text",
                            "name" : "sa-open",
                            "title" : "Samstag",
                            "placeholder" : "Geöffnet",
                            "meta_box" : true
                        },
                        {
                            "type" : "text",
                            "name" : "sa-close",
                            "placeholder" : "Geschlossen",
                            "meta_box" : true
                        }
                    ]
                },
                {
                    "gtype" : "row",
                    "cols" : 2,
                    "fields" : [
                        {
                            "type" : "text",
                            "name" : "su-open",
                            "title" : "Sonntag",
                            "placeholder" : "Geöffnet",
                            "meta_box" : true
                        },
                        {
                            "type" : "text",
                            "name" : "su-close",
                            "placeholder" : "Geschlossen",
                            "meta_box" : true
                        }
                    ]
                }
            ]
        },
        {
            "gtype" : "section",
            "description" : "<div class=\"gmaps-specify-map\"></div>",
            "fields" : [
                {
                    "type" : "notice",
                    "text" : "<div class=\"gmaps-specify-markers\"></div>"
                },
                {
                    "type" : "hidden",
                    "name" : "company-location",
                    "validate" : {
                        "regExp" : "^(\\d+\\.?\\d* \\d+\\.?\\d*)+$"
                    },
                    "meta_box" : true
                }
            ]
        },
        {
            "type" : "submit",
            "name" : "user-submit",
            "value" : "Submit"
        }
    ]
}
