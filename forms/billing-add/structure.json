            "title_tag" : "h3",
            "fields" : [
                {
                    "gtype" : "row",
                    "fields" : [
                        {
                            "type" : "text",
                            "title" : "Der Name des Unternehmens auf den die Rechnung ausgestellt werden soll",
                            "name" : "billing-company",
                            "validate" : {
                                "notEmpty" : true
                            },
                            "meta_box" : "true"
                        },
                        {
                            "type" : "text",
                            "title" : "Rechnungsadresse",
                            "name" : "billing-address",
                            "validate" : {
                                "notEmpty" : true
                            },
                            "meta_box" : true
                        },
                        {
                            "type" : "hidden",
                            "name" : "billing-region",
                            "meta_box" : true
                        },
                        {
                            "type" : "hidden",
                            "name" : "billing-city",
                            "meta_box" : true
                        },
                        {
                            "type" : "hidden",
                            "name" : "billing-postcode",
                            "meta_box" : true
                        }
                    ]
                },
                {
                    "gtype" : "row",
                    "cols" : 2,
                    "fields" : [
                        {
                            "type" : "text",
                            "title" : "Person name",
                            "name" : "billing-name",
                            "validate" : {
                                "notEmpty" : true
                            },
                            "meta_box" : "true"
