{
    "options" : {
        "method" : "post",
        "print_method" : "server",
        "json_validate" : 0,
        "before" : "<div class=\"fcp-form-login\">",
        "after" : "</div>",
        "enctype" : "multipart/form-data"
    },
    "fields" : [
        {
            "type" : "text",
            "placeholder" : "Username",
            "name" : "log",
            "value" : "!!",
            "validate" : {
                "notEmpty" : true,
                "name" : true
            }
        },
        {
            "type" : "text",
            "placeholder" : "Password",
            "name" : "pwd",
            "validate" : {
                "notEmpty" : true
            }
        },
        {
            "type" : "checkbox",
            "name" : "rememberme",
            "options" : {
                "forever" : "Remember me"
            },
            "validate" : {
                "notEmpty" : true
            }
        },
        {
            "type" : "file",
            "title" : "The logo",
            "description" : "",
            "name" : "logo",
            "validate" : {
                "default" : true,
                "maxSize" : 50000,
                "extension" : [
                    "jpg",
                    "jpeg",
                    "png",
                    "gif"
                ]
            }
        },
        {
            "type" : "Submit",
            "name" : "user-submit",
            "value" : "Login"
        }
    ]
}
