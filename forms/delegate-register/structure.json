{
    "options" : {
        "method" : "post",
        "print_method" : "server",
        "json_validate" : 1,
        "required_mark" : "*",
        "reduce_font_after" : 36,
        "width" : "half",
        "tab" : "Registrieren"
    },
    "fields" : [
        {
            "gtype" : "section",
            "title" : "Eine Klinik oder einen Arzt registrieren",
            "title_tag" : "h2",
            "fields" : [
                {
                    "gtype" : "row",
                    "fields" : [
                        {
                            "type" : "text",
                            "placeholder" : "Ihre Emailadresse",
                            "name" : "user-email",
                            "validate" : {
                                "notEmpty" : true,
                                "email" : true
                            }
                        }
                    ]
                },
                {
                    "gtype" : "row",
                    "cols" : 2,
                    "fields" : [
                        {
                            "type" : "password",
                            "placeholder" : "Passwort festlegen",
                            "name" : "user-password",
                            "validate" : {
                                "notEmpty" : true,
                                "password" : true
                            }
                        },
                        {
                            "type" : "password",
                            "placeholder" : "Passwort weiederholen",
                            "name" : "user-password-repeat",
                            "validate" : {
                                "notEmpty" : true,
                                "equals" : "user-password"
                            }
                        }
                    ]
                },
                {
                    "gtype" : "row",
                    "cols" : 2,
                    "fields" : [
                        {
                            "type" : "checkbox",
                            "name" : "user-datenschutzhinweise",
                            "options" : {
                                "Datenschutzhinweise bestätigt" : "Datenschutzhinweise gelesen"
                            },
                            "validate" : {
                                "notEmpty" : true
                            }
                        },
                        {
                            "type" : "checkbox",
                            "name" : "user-nutzungsbedingungen",
                            "options" : {
                                "Nutzungsbedingungen bestätigt" : "Nutzungsbedingungen akzeptiert"
                            },
                            "validate" : {
                                "notEmpty" : true
                            }
                        }
                    ]
                },
                {
                    "type" : "checkbox",
                    "name" : "user-agb",
                    "options" : {
                        "AGB bestätigt" : "AGB akzeptiert"
                    },
                    "validate" : {
                        "notEmpty" : true
                    }
                },
                {
                    "type" : "notice",
                    "text" : "<small><a href=\"/datenschutzerklarung/\" target=\"_blank\">Datenschutzerklärung</a> | <a href=\"/agb/\" target=\"_blank\">Allgemeinen Geschäftsbedingungen</a> | <a href=\"/faq/\" target=\"_blank\">Nutzungsbedingungen</a></small>"
                }
            ]
        },
        {
            "type" : "submit",
            "name" : "user-submit",
            "value" : "Registrieren"
        }
    ]
}
